generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  email String @unique
  password String
  gender String
  Journals Journal[]
  tree Flower[]
  coins Int
  awards Awards[]


}


model Journal {
  id String @id @default(uuid())
  title String
  dateCreated DateTime @default(now())
  updatedAt DateTime @default(now())
  mood String
  content String
  author User @relation(fields: [authorId], references: [id])
  authorId String


}

model Flower {
  id String @id @default(uuid())
  author User @relation(fields: [authorId], references: [id])
  authorId String
  dateCreated DateTime @default(now())
  updatedAt DateTime @default(now())
  color String
  questionOne String
  questionTwo String
  questionThree String
  questionFour String
  questionFive String
  questionSix String
  questionSeven String
  x Int
  y Int
  done Boolean

}

model Awards {
  id String @id @default(uuid())
  type String
  name String
  author User @relation(fields: [authorId], references: [id])
  authorId String

}
