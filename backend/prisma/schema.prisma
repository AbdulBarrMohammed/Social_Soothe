generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  email String @unique
  password String
  gender String
  Journals Journal[]
  tree Flower[]
  coins Int
  fonts Fonts[]
  sounds Sounds[]
  currColor String
  backgroundImg BackgroundImgs[]
  colorScheme ColorSchemes[]
  currBackgroundImg String
  currSound String
  currFont String


}


model Journal {
  id String @id @default(uuid())
  title String
  dateCreated DateTime @default(now())
  updatedAt DateTime @default(now())
  mood String
  content String
  author User @relation(fields: [authorId], references: [id])
  authorId String


}

model Flower {
  id String @id @default(uuid())
  author User @relation(fields: [authorId], references: [id])
  authorId String
  dateCreated DateTime @default(now())
  updatedAt DateTime @default(now())
  color String
  questionOne String
  questionTwo String
  questionThree String
  questionFour String
  questionFive String
  questionSix String
  questionSeven String
  x Int
  y Int
  done Boolean
  isChecked Boolean

}


model Sounds {
  id String @id @default(uuid())
  name String
  src String
  author User @relation(fields: [authorId], references: [id])
  authorId String
}

model Fonts {
  id String @id @default(uuid())
  name String
  author User @relation(fields: [authorId], references: [id])
  authorId String

}

model BackgroundImgs {
  id String @id @default(uuid())
  name String
  src String
  author User @relation(fields: [authorId], references: [id])
  authorId String

}

model ColorSchemes {
  id String @id @default(uuid())
  name String
  dark String
  semiDark String
  medium String
  light String
  lightest String
  author User @relation(fields: [authorId], references: [id])
  authorId String

}
